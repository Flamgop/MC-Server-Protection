    "lore_color": "gold",
    "pages": [
      [{"text": ""},
        {"text": "Index\n", "bold": true},
        {"text": " 1. Intro",
          "clickEvent": {
            "action": "change_page",
            "value": "2"
          }
        }
      ],
      [{"text": ""},
        {
          "text": "Towns\n",
